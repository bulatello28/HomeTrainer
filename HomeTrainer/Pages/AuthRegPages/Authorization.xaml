<Page x:Class="HomeTrainer.Pages.AuthRegPages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeTrainer.Pages.AuthRegPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock>Логин:</TextBlock>
            <TextBox x:Name="TbLogin"></TextBox>
            <TextBlock>Пароль:</TextBlock>
            <PasswordBox x:Name="Password"></PasswordBox>
            <TextBlock></TextBlock>
            <Button x:Name="BtnAuth">Войти</Button>
            <TextBlock></TextBlock>
            <TextBlock TextAlignment="Center"><Hyperlink NavigateUri="Registration.xaml">У меня нет аккаунта.</Hyperlink></TextBlock>
        </StackPanel>
    </Grid>
</Page>
